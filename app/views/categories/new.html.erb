<h1>New Category</h1>

<%= simple_form_for @category, html: { class: 'form-horizontal' } do |form| %>
  <div class="form-group">
    <%= form.input :name, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back to Categories', categories_path, class: 'btn btn-secondary' %>
